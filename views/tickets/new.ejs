<%- include('../partials/header') %>
<h1>Create Ticket</h1>
<form action="/flights/<%=flight.id%>/tickets" method="post">
    <input type="hidden" name="flight" value="<%= flight.id %>">
    <label>Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label>Price:</label>
    <input type="number" name="price">
    <input type="submit">
</form>